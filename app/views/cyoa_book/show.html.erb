<div class='container'>
  <div class='row'>
    <h1 class='col-xs-12 text-center'>Inkle story to PDF generator</h1>
  </div>
  <%= form_tag({ action: :create, format: :pdf }, { class: 'form-horizontal' }) do %>
    <div class='form-group'>
      <%= label_tag :inkle_url, 'Inkle URL or story id', class: 'col-xs-3 control-label' %>
      <div class='col-xs-9'>
        <%= text_field_tag :inkle_url, nil, class: 'form-control', placeholder: 'musgraveritual' %>
      </div>
    </div>
    <div class='form-group'>
      <div class='col-xs-9 col-xs-offset-3'>
        <%= check_box_tag :title_page, '1', true %>
        <%= label_tag :title_page, 'Include Title Page' %>
      </div>
    </div>
    <div class='form-group' id='markup-mappping'>
      <%= react_component 'MarkupMapping' %>
    </div>
    <div class='form-group'>
      <div class='col-xs-9 col-xs-offset-3'>
        <%= submit_tag 'Submit' %>
      </div>
    </div>
  <% end %>
</div>
